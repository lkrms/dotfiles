[commit]
	gpgSign = true

[cola]
	expandtab = true
	safemode = true
	spellcheck = false
	startupmode = list
	statusshowtotals = true
	tabwidth = 4

[core]
	autocrlf = input
	pager = delta

[delta]
	navigate = true
	side-by-side = true

[diff]
	guitool = smerge
	renames = copies

[gui]
	editor = code

[init]
	defaultBranch = main

[interactive]
	diffFilter = delta --color-only

[merge]
	conflictstyle = zdiff3
	tool = meld

[pull]
	ff = only

[push]
	default = nothing
	followTags = true

[rebase]
	autoSquash = true

[tag]
	gpgSign = true

